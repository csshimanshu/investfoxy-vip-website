<script>
  interface FormData {
    tradingExperience: string;
    selectedPlan: string;
    email: string;
    discordId?: string;
  }

  interface CustomWindow extends Window {
    formData: FormData;
    showInterestModal: () => void;
    closeInterestModal: () => void;
    resetForm: () => void;
    showStep: (step: number) => void;
    selectExperience: (experience: string) => void;
    selectPlan: (plan: string) => void;
    submitForm: () => Promise<void>;
  }

  declare const window: CustomWindow;

  // Initialize form data
  window.formData = {
    tradingExperience: '',
    selectedPlan: '',
    email: '',
    discordId: ''
  };

  // Modal functions
  window.showInterestModal = () => {
    const modal = document.getElementById('interest-modal');
    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }
  };

  window.closeInterestModal = () => {
    const modal = document.getElementById('interest-modal');
    if (modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }
    window.resetForm();
  };

  window.resetForm = () => {
    window.formData = {
      tradingExperience: '',
      selectedPlan: '',
      email: '',
      discordId: ''
    };
    
    // Reset form fields
    const emailInput = document.getElementById('email') as HTMLInputElement;
    const discordInput = document.getElementById('discord') as HTMLInputElement;
    if (emailInput) emailInput.value = '';
    if (discordInput) discordInput.value = '';
    
    // Hide error message
    const errorText = document.getElementById('error-text');
    if (errorText) errorText.textContent = '';
    
    window.showStep(1);
  };

  window.showStep = (step: number) => {
    const steps = document.querySelectorAll('.step-content');
    steps.forEach((s, i) => {
      if (i + 1 === step) {
        s.classList.remove('hidden');
      } else {
        s.classList.add('hidden');
      }
    });
  };

  window.selectExperience = (experience: string) => {
    window.formData.tradingExperience = experience;
    window.showStep(2);
  };

  window.selectPlan = (plan: string) => {
    window.formData.selectedPlan = plan;
    window.showStep(3);
  };

  window.submitForm = async () => {
    const emailInput = document.getElementById('email') as HTMLInputElement;
    const discordInput = document.getElementById('discord') as HTMLInputElement;
    const errorText = document.getElementById('error-text');
    
    // Clear previous error
    if (errorText) errorText.textContent = '';

    // Validate email
    if (!emailInput?.value) {
      if (errorText) errorText.textContent = 'Please enter your email address';
      return;
    }

    // Update form data
    window.formData.email = emailInput.value;
    window.formData.discordId = discordInput?.value || '';

    try {
      // Use the correct API endpoint path
      const response = await fetch('/api/interests', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(window.formData)
      });

      if (!response.ok) {
        const errorData = await response.json().catch(() => ({}));
        throw new Error(errorData.message || `HTTP error! status: ${response.status}`);
      }

      const result = await response.json();

      if (result.success) {
        // Show success step
        window.showStep(4);
      } else {
        if (errorText) errorText.textContent = result.message || 'An error occurred. Please try again.';
      }
    } catch (error) {
      console.error('Error submitting form:', error);
      if (errorText) {
        errorText.textContent = error instanceof Error ? error.message : 'An error occurred while submitting the form. Please try again.';
      }
    }
  };

  // Initialize form
  window.resetForm();
</script>

